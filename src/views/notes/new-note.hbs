<form action="/notes/new-note" method="POST" class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-sticky-note"></i> Nueva nota</h3>
    </div>
    <div class="card-body">
        <div class="col-12 col-md-6 m-auto">
            <fieldset class="form-fieldset">
                <div class="form-group">
                    <div class="input-icon">
                        <span class="input-icon-addon">
                            <i class="fe fe-edit-3"></i>
                        </span>
                        <input type="text" name="title"
                            class="form-control {{#if errors }}{{#if title }}is-valid state-valid{{else}}is-invalid state-invalid{{/if}}{{/if}}"
                            placeholder="Título *" autofocus value="{{title}}">
                    </div>
                    {{#if errors.title }}
                    <div class="invalid-feedback">{{errors.title}}</div>
                    {{/if}}
                </div>
                <div class="form-group mb-0">
                    <div class="input-icon">
                        <span class="input-icon-addon">
                            <i class="fe fe-file-text"></i>
                        </span>
                        <textarea name="description"
                            class="form-control {{#if errors }}{{#if desciption }}is-valid state-valid{{else}}is-invalid state-invalid{{/if}}{{/if}}"
                            placeholder="Descripción *">{{description}}</textarea>
                    </div>
                    {{#if errors.description }}
                    <div class="invalid-feedback">{{errors.description}}</div>
                    {{/if}}
                </div>
            </fieldset>
        </div>
    </div>
    <div class="card-footer text-center">
        <a href="/notes" class="btn btn-secondary"><i class="fe fe-slash"></i> Cancelar</a>
        <button type="submit" class="btn btn-success ml-2"><i class="fe fe-save"></i> Guardar</button>
    </div>
</form>